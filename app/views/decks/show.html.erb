<%  # @cards.group(:colors).count %>

<div class="ui grid">
  <div class="five wide column">
    <h5>Types</h5>
    <canvas id="card-types-chart"></canvas>
  </div>
  <div class="five wide column">
    <h5>Color distribuiton</h5>
    <canvas id="color-distribution-chart"></canvas>
  </div>
  <div class="four wide column">
    <h5>Mana Curve</h5>
    <canvas id="mana-costs-chart"></canvas>
  </div>
</div>
<div class="ui grid">
  <h5>Sample Hand</h5>
  <div class="ui row">
    <% @cards.sample(7).each do |card| %>
      <div class="two wide column">
        <%= image_tag card.image_url, alt: "Image not available" %>
        <br />
      </div>
    <% end %>
  </div>
</div>
