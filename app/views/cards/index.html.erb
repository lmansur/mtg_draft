<%= form_for @search, url: cards_path, method: "get" do |f| %>
  <%= f.label :full_text_search %>
  <%= f.text_field :full_text_search %>

  <%= f.label :cmc %>
  <%= f.select :cmc, options_for_select(0..17), include_blank: true %>

  <br />
  <%= f.label :card_type %>
  <%= f.text_field :card_type %>

  <br />
  <%= f.select :colors, options_for_colors_select, {}, class: "ui search dropdown", multiple: "" %>

  <%= f.submit "Search" %>
<% end %>

<div class='cards ui stackable five column grid container'>
  <%= render partial: "card", collection: @cards %>
  <%= paginate @cards %>
</div>
